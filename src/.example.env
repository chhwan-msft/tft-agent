# --- Azure AI Search ---
# Full endpoint URL, e.g. https://<your-search-service>.search.windows.net
AZURE_SEARCH_ENDPOINT=https://<your-search-service>.search.windows.net
# Admin or query key (REPLACE with your key)
AZURE_SEARCH_ADMIN_KEY=REPLACE_WITH_AZURE_SEARCH_KEY
# Index names used by the project
AZURE_SEARCH_INDEX_UNITS=tftset15-units
AZURE_SEARCH_INDEX_ITEMS=tftset15-items
AZURE_SEARCH_INDEX_TRAITS=tftset15-traits
# API version used for search features
AZURE_SEARCH_API_VERSION=2024-05-01-Preview

# --- Azure Foundry / AOAI ---
AOAI_RESOURCE_URI=https://<your-foundry-resource>.openai.azure.com
AOAI_API_KEY=REPLACE_WITH_AOAI_API_KEY
# Embedding deployment and dimensionality
AOAI_EMBED_MODELNAME=text-embedding-ada-002
AOAI_EMBED_DIM=1536

# --- Azure Blob Storage (for ingestion) ---
AZURE_STORAGE_ACCOUNT=REPLACE_WITH_STORAGE_ACCOUNT
AZURE_RESOURCE_GROUP=REPLACE_WITH_RESOURCE_GROUP
AZURE_SUBSCRIPTION_ID=REPLACE_WITH_SUBSCRIPTION_ID
BLOB_CONTAINER_UNITS=tftset15-units
BLOB_CONTAINER_ITEMS=tftset15-items
BLOB_CONTAINER_TRAITS=tftset15-traits

# --- CDragon / ingestion source URLs (optional overrides) ---
CDRAGON_UNITS_URL=https://raw.communitydragon.org/latest/.../tftchampions-teamplanner.json
CDRAGON_ITEMS_URL=https://raw.communitydragon.org/latest/.../tftitems.json
CDRAGON_TRAITS_URL=https://raw.communitydragon.org/latest/.../tfttraits.json
SET_KEY=TFTSet15
LANG=en_us

# --- Misc / logging ---
LOG_LEVEL=INFO

# --- AI Foundry Project (replace with your project endpoints / keys) ---
# AI Foundry project endpoint (no quotes)
AIPROJECT_ENDPOINT=https://<your-foundry>.services.ai.azure.com/api/projects/<your-project-id>
# Chat model endpoint and API key (if used)
CHAT_MODEL_ENDPOINT=https://<your-foundry>.cognitiveservices.azure.com/openai/deployments/<deployment>/chat/completions?api-version=<date>
CHAT_MODEL_API_KEY=REPLACE_WITH_CHAT_MODEL_API_KEY
CHAT_MODEL=<api-version-or-model-name>

# --- Agent IDs (optional) ---
TACTICS_DOT_TOOLS_AGENT_ID=asst_REPLACE_WITH_AGENT_ID
PATCH_NOTES_RESEARCHER_AGENT_ID=asst_REPLACE_WITH_AGENT_ID
GROUNDING_AGENT_ID=asst_REPLACE_WITH_AGENT_ID
MAIN_AGENT_ID=asst_REPLACE_WITH_AGENT_ID

# --- Notes ---
# - DO NOT commit real secrets to source control. Use a secret manager or local .env ignored by git.
# - Replace 'REPLACE_WITH_*' values with your real credentials before running.
